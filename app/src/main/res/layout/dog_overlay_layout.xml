<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/overlay_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ggradient"
    android:gravity="center"
    android:orientation="vertical">

    <!-- 총 사용 시간 텍스트 + 말풍선 -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <!-- 말풍선 본체 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/speech_bubble"
            android:padding="16dp"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:id="@+id/total_usage_time_text"
                android:layout_width="250dp"
                android:layout_height="54dp"
                android:text=" 오늘의 총 사용 시간은 \n 00시간 00분 00초다멍!"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>

        <!-- 말풍선 꼬리 -->
        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/triangle_tail"
            android:layout_gravity="top|end"
            android:translationX="10dp"
            android:translationY="-10dp"
            android:rotation="45"/>
    </FrameLayout>

    <!-- 화면 켜짐 횟수 텍스트 + 말풍선 -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <!-- 말풍선 본체 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/speech_bubble"
            android:padding="16dp"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:id="@+id/screen_on_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="화면 켜짐 횟수는 0회다, 멍!"
                android:textColor="@android:color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- 말풍선 꼬리 -->
        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/triangle_tail"
            android:layout_gravity="top|end"
            android:translationX="10dp"
            android:translationY="-10dp"
            android:rotation="45"/>
    </FrameLayout>

    <!-- 강아지 이미지 -->
    <ImageView
        android:id="@+id/dog_image_view"
        android:layout_width="270dp"
        android:layout_height="304dp"
        android:src="@drawable/ic_dog1" />

    <!-- 말풍선 레이아웃 -->
    <FrameLayout
        android:id="@+id/alert_message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <!-- 말풍선 본체 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/speech_bubble"
            android:padding="16dp"
            android:gravity="center_vertical|center_horizontal">

            <!-- 말풍선 텍스트 -->
            <TextView
                android:id="@+id/alert_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안녕! 난 바둑이다 멍!"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <!-- 말풍선 꼬리 -->
        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/triangle_tail"
            android:layout_gravity="top|end"
            android:translationX="10dp"
            android:translationY="-10dp"
            android:rotation="45"/>
    </FrameLayout>

    <!-- 닫기 버튼 -->
    <Button
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="닫기"
        android:backgroundTint="@android:color/holo_blue_light"
        android:textColor="@android:color/white" />
</LinearLayout>
